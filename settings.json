{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git config:*)",
      "Bash(ls:*)",
      "Bash(for:*)",
      "Bash(do)",
      "Bash(then)",
      "Bash(sed:*)",
      "Bash(fi)",
      "Bash(done)",
      "Bash(find:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(mkdir:*)",
      "Bash(curl:*)"
    ],
    "deny": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/aural/.claude/hooks/session_start.py --load-context --announce"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "paplay /run/current-system/sw/share/sounds/freedesktop/stereo/bell.oga"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "paplay /run/current-system/sw/share/sounds/freedesktop/stereo/dialog-warning.oga"
          }
        ]
      }
    ]
  },
  "model": "opus"
}
